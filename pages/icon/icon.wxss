/* pages/icon/icon.wxss */
.page{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.icon-grid{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0rpx;
  border-color: lightgray;
  border-width: 1rpx;
  border-style: solid;
}

.icon-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-title{
  margin-top: 20rpx;
  font-size: 28rpx;
}

.rotate-icon {
  animation: iconRotate 3s linear infinite;
}

@keyframes iconRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}